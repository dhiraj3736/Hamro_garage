<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nearest_garage_location">



    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true">

        <fragment
            android:id="@+id/map"
            android:name="com.hamro_garage.nearest_garage_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_user_maps" />

    </FrameLayout>

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view" />
    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="HAMRO GARAGE"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:strokeColor="@color/white"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/ssss"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="3dp">

        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Garage"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
